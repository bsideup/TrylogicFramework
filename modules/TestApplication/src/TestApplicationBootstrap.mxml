<?xml version="1.0"?>
<tl:Bootstrap xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:tl="http://www.trylogic.ru/"
			  xmlns:ioc="http://www.trylogic.ru/ioc/" xmlns:service="service.*" preloader="TestApplicationPreloader">

	<tl:applicationControllerClass>view.applicationView.TestApplicationViewController</tl:applicationControllerClass>

	<tl:iocMap>
		<ioc:Associate iface="tl.actions.IActionLogger" withClass="core.ActionLogger" factory="tl.factory.SingletonFactory" />
		<ioc:Associate iface="tl.actions.IActionDispatcher" withClass="tl.actions.ActionDispatcher" />
		<ioc:Associate iface="core.ILogger" withClass="core.Logger" />

		<ioc:Associate iface="view.applicationView.IApplicationView" withClass="view.applicationView.ApplicationView" />

		<ioc:GroupAssociate comment="services">
			<ioc:Associate iface="service.IFreezeService" withClass="service.FreezeService" factory="tl.factory.ServiceFactory" />
		</ioc:GroupAssociate>

		<ioc:GroupAssociate>
			<ioc:Associate iface="models.IMyModel" withClass="models.MyModel" factory="tl.factory.SingletonFactory" />
			<ioc:Associate iface="view.testView.ITestViewController" withClass="view.testView.TestViewController" factory="tl.factory.SingletonFactory" />
			<ioc:Associate iface="view.testView.ITestView" withClass="view.testView.TestView" />
		</ioc:GroupAssociate>
	</tl:iocMap>

	<tl:services>
		<service:FreezeService text="onFreeze" />
	</tl:services>

</tl:Bootstrap>