package tl.ioc{	import flash.utils.Proxy;	import flash.utils.flash_proxy;	import mx.core.IMXMLObject;	public class Resolve extends Proxy implements IMXMLObject	{		public var iface : Class;		private var _instance : Object;		public function initialized( document : Object, id : String ) : void		{			if ( iface == null )			{				throw new ArgumentError( "iface can't be null!" );			}			_instance = IoCHelper.resolve( iface, this );		}		public function get instance() : Object		{			return _instance;		}		override flash_proxy function getProperty( name : * ) : *		{			if ( name == "instance" ) return _instance;			return _instance[name];		}		override flash_proxy function setProperty( name : *, value : * ) : void		{			_instance[name] = value;		}		override flash_proxy function callProperty( name : *, ... rest ) : *		{			return _instance[name].apply( _instance, rest );		}		override flash_proxy function hasProperty( name : * ) : Boolean		{			return _instance.hasOwnProperty( name );		}		override flash_proxy function deleteProperty( name : * ) : Boolean		{			if ( _instance.hasOwnProperty( name ) )			{				delete _instance[name];				return true;			}			else			{				return false;			}		}	}}