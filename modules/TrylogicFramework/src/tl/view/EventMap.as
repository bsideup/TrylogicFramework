package tl.view{	import flash.events.Event;	import flash.events.IEventDispatcher;	public class EventMap implements IEventMap	{		[Bindable]		public var source : IEventDispatcher;		[Bindable]		public var type : String;		[Bindable]		public var destination : Function;		public function bind() : void		{			if(source!= null)			{				source.addEventListener(type, handler);			}		}		public function unbind() : void		{			if(source!= null)			{				source.removeEventListener(type, handler);			}		}		private function handler(e : Event) : void		{			if(destination != null)			{				destination();			}		}	}}